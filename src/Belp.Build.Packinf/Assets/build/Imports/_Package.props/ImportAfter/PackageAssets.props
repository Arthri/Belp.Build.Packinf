<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildThisFileDirectory)..\..\$(MSBuildThisFile)\ImportBefore\*" Condition="Exists('$(MSBuildThisFileDirectory)..\..\$(MSBuildThisFile)\ImportBefore\')" />



  <!-- Configure default package assets -->
  <ItemGroup Condition="'$(EnableDefaultPackItems)' != 'false'">
    <PackageAssets Include="Assets\**\*" PackagePath="/" />
  </ItemGroup>



  <PropertyGroup>
    <!-- This needs to happen before packing acquires package files. -->
    <GenerateNuspecDependsOn>$(GenerateNuspecDependsOn);_SetPackagePathForContentFiles</GenerateNuspecDependsOn>
  </PropertyGroup>



  <Import Project="$(MSBuildThisFileDirectory)..\..\$(MSBuildThisFile)\ImportAfter\*" Condition="Exists('$(MSBuildThisFileDirectory)..\..\$(MSBuildThisFile)\ImportAfter\')" />

</Project>
