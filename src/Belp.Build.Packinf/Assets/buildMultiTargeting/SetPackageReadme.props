<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- Prevent duplicates -->
    <DefaultExcludesInProjectFolder>$(DefaultExcludesInProjectFolder);README.*</DefaultExcludesInProjectFolder>
  </PropertyGroup>

  <!-- Include default READMEs beside project file -->
  <ItemGroup>
    <PackageReadme Include="README.*" ItemSource="ProjectFolder" />
  </ItemGroup>

</Project>
